%div{ uk: { grid: true } }
  .uk-width-1-3
    %dl.attributions
      %dt= t("content_attributions_labels.license")
      %dd= content.license.name.html_safe
      %dt= t("content_attributions_labels.owner")
      %dd= content.owner.html_safe
      - unless content.rights_statement.blank?
        %dt= t("content_attributions_labels.rights_statement")
        %dd= content.rights_statement.html_safe
  .uk-width-1-3
    %dl.attributions
      - if content.bibliographic_citation && ! content.bibliographic_citation.body.blank?
        %dt= t("content_attributions_labels.bibliographic_citation")
        %dd= content.bibliographic_citation.body.html_safe
      - if loc = content.location
        %dt= t("content_attributions_labels.location")
        %dd
          %dl
            - unless loc.location.blank?
              %dt= t("content_attributions_labels.location_verbatim")
              %dd= loc.location
            - if loc.latitude
              %dt= t("content_attributions_labels.latitude")
              %dd= loc.latitude
            - if loc.longitude
              %dt= t("content_attributions_labels.longitude")
              %dd= loc.longitude
            - if loc.altitude
              %dt= t("content_attributions_labels.altitude")
              %dd= loc.altitude
            - unless loc.spatial_location.blank?
              %dt= t("content_attributions_labels.spatial_location")
              %dd= loc.spatial_location
      - content.attributions.each do |attribution|
        %dt= t("content_attributions_labels.#{attribution.role.name}")
        %dd= attribution.value.html_safe
  .uk-width-1-3
    %dl.attributions
      - if content.source_page_url
        %dt= t("content_attributions_labels.view_source_label")
        %dd= link_to(t("content_attributions_labels.view_source_link"), content.source_url)
        %dd= link_to(t("content_attributions_labels.view_source_page_link"), content.source_page_url)
      %dt= t("content_attributions_labels.resource_label")
      %dd
        -# - if content.resource
          -# = link_to(content.resource.name, content.resource.url || resource_path(content.resource))
        -# - else
          -# = t(:resource_missing)
        -# -returned_content_partner = ContentPartnerApi.get_content_partner_resource_id(content.resource_id)
        -# -result = ResourceApi.get_resource_using_id(content.resource_id)
        -content_partner_id=ResourceApi.get_content_partnerid_using_resourceid(content.resource_id)
        -result = ResourceApi.get_resource(content_partner_id["id"],content.resource_id)
        -@resource = Resource.new( name: result["name"],origin_url: result["original_url"],uploaded_url: result["uploaded_url"],
                      type: result["type"],path: result["path"],last_harvested_at: result["last_harvested_at"],harvest_frequency: result["harvest_frequency"],
                      day_of_month: result["day_of_month"],nodes_count: result["nodes_count"],position: result["position"],is_paused: result["_paused"],
                      is_approved: result["_approved"],is_trusted: result["_trusted"],is_autopublished: result["_autopublished"],is_forced: result["_forced"],
                      dataset_license: result["dataset_license"],dataset_rights_statement: result["dataset_rights_statement"],
                      dataset_rights_holder: result["dataset_rights_holder"],default_license_string: result["default_license_string"],
                      default_rights_statement: result["default_rights_statement"],default_rights_holder: result["default_rights_holder"],
                      default_language_id: result["default_language_id"])
        -if !@resource.nil?
          = link_to(@resource.name, content_partner_resource_path(content_partner_id["id"], result["id"]))
        -else
          = t(:resource_missing)
      %dt= "ID"
      %dd.uk-text-meta.uk-overflow-hidden.uk-margin-remove-top= content.resource_pk
