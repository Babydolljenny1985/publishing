#collection_item.container
  .well
    - if image = @item.collect_with_icon
      .collect-image
        = image_tag(image, size: "130x130")
    %h2.clearfix= t(:collection_item_title, item: @item.collect_as(Language.current))
    .row
      .col-md-6
        %h3= t(:collection_item_new_collection_title)
        = form_for(@collection, html: { class: "form-inline" }) do |f|
          = f.label(:name, class: "sr-only")
          = f.text_field(:name, class: "form-control", placeholder: t(:collection_item_new_collection))
          = f.fields_for :collection_items do |item_f|
            = item_f.hidden_field(:item_id, item_id: @collection_item.item_id)
            = item_f.hidden_field(:item_type, item_type: @collection_item.item_type)
          = f.submit(t(:button_create), class: "btn btn-default")
      .col-md-6
        %h3= t(:collection_item_select_collection)
        - if current_user.collections.empty?
          %p= t(:collection_item_no_existing_collections)
        - else
          = form_for(@collection_item, html: { class: "form" }) do |f|
            = f.hidden_field(:item_id, item_id: @collection_item.item_id)
            = f.hidden_field(:item_type, item_type: @collection_item.item_type)
            -# TODO: Nicer formatting, show # of items, grey-out collections that already have this item...
            - now = Time.now
            - current_user.collections.sort_by { |c| [now - (c.updated_at || 10.years.ago), c.name] }.each do |collection|
              - disable = @bad_collection_ids.include?(collection.id)
              .radio{ class: disable ? "disabled" : nil }
                = f.radio_button(:collection_id, collection.id, disabled: disable)
                = f.label(:collection_id, collection.name)
                - if disable
                  %span.disabled.danger= t(:collection_item_already_in_collection)
            = f.submit(t(:button_add), class: "btn btn-default")
