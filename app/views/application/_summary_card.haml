.summary-card
  .summary-card-icon.summary-card-icon-main
    -if object.icon
      = image_tag(object.icon, :class => "image")
    -else
      %i{:class => "fa fa-3x fa-#{object.fa_icon}"}
  .summary-card-details
    .summary-card-title= object.title.html_safe
    .summary-card-content= object.content.html_safe
    .summary-card-hier= object.hierarchy.html_safe
  -if show_plus && object.respond_to?(:page_id)
    .summary-card-icon.summary-card-icon-plus.js-add-to-col{ :data => { :'page-id' => object.page_id } }
      %i.fa.fa-plus.fa-2x
