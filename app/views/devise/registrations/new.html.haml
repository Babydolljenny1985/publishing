%h2 
  = I18n.t('signup')
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label I18n.t('display_name')
    %br/
    = f.text_field :display_name, autofocus: true
  .field
    = f.label I18n.t('email')
    %br/
    = f.email_field :email
  .field
    = f.label I18n.t('password')
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "off"
  .field
    = f.label I18n.t('password_confirmation')
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .field
    = f.label :recaptcha
    %br/
    = flash[:recaptcha_error] if flash[:recaptcha_error]
    = recaptcha_tags(stoken: false) 
  .actions
    = f.submit I18n.t('create_account')
= render "devise/shared/links"
