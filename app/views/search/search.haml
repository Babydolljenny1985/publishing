%ul.search-results{ :data => { :query => @q } }
  = render "search_page"

.searchFilter
  .searchFilter-types
    - if defined?(@pages) && @pages.total_count > 0
      .searchFilter-types-type.selected{ :data => { :type => :pages} }
        %i.fa.fa-check.fa-lg
        %span= t("search.n_taxon_pages", :count => @pages.total_count)

    - if defined?(@media) && @media.total_count > 0
      .searchFilter-types-type.selected{ :data => { :type => :media } }
        %i.fa.fa-check.fa-lg
        %span= t("search.n_media", :count => @media.total_count)

  -# if defined?(@collections) && @collections
    = render("collections/search_results")
  -# if defined?(@users) && ! @users.blank?
    = render("users/search_results")

.filterBar
  %i.filterBar-icon.fa.fa-sliders.fa-2x.open
  %i.filterBar-icon.fa.fa-close.fa-2x.close
  .filterBar-resultCount= t("search.n_results", :count => result_total([@pages, @media]))
