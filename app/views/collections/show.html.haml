.jumbotron
  .row
    .col-md-9
      %h1= @collection.name
      - unless @collection.description.blank?
        %p= @collection.description
    - if policy(@collection).update?
      %p.col-md-3.actions
        %button.btn.btn-default
          = link_to(t(:collection_edit_button), edit_collection_path(@collection))
- if @collection.collected_pages.empty?
  %p= t(:collection_pages_empty)
- else
  %h2= t(:collected_pages_title)
  %table.collection_items
    %tbody
      - @collection.collected_pages.each do |collected_page|
        = render("pages/as_row",
          page: collected_page.page,
          icon: collected_page.icon,
          media: collected_page.media,
          common: collected_page.name,
          scientific: collected_page.scientific_name_string)
- if @collection.collection_items.empty?
  %p= t(:collection_items_empty)
- else
  %h2= t(:collection_items_title)
  %table.collection_items
    %tbody
      - @collection.collection_items.each do |collection_item|
        - item = collection_item.item
        %tr
          %th.collection-table-image{ scope: "row" }
            = link_to(image_tag(item.icon), item)
          %th{ scope: "row" }
            .names.d-inline
              = link_to(item.name.html_safe, item)
