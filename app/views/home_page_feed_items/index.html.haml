%h1 Items for feed: #{@home_page_feed.name}

%table
  %thead
    %tr
      - @home_page_feed.fields.each do |field|
        %th= field
      %th
      %th
      %th

  %tbody
    - @home_page_feed_items.each do |home_page_feed_item|
      %tr
        - home_page_feed_item.fields.each do |field|
          %td= home_page_feed_item.attributes[field.to_s]
        %td= link_to 'Show', home_page_feed_item_path(@home_page_feed, home_page_feed_item)
        %td= link_to 'Edit', edit_home_page_feed_item_path(@home_page_feed, home_page_feed_item)
        %td= link_to 'Destroy', home_page_feed_item_path(@home_page_feed, home_page_feed_item), method: :delete, data: { confirm: 'Are you sure?' }

%br


= link_to new_home_page_feed_item_path do
  %button.uk-button.uk-button-default New item
