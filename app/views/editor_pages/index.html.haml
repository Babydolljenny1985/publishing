%h1 Listing editor_pages

%table
  %thead
    %tr
      %th Name
      %th Slug
      %th
      %th
      %th

  %tbody
    - @editor_pages.each do |editor_page|
      %tr
        %td= editor_page.title
        %td= editor_page.slug
        %td= link_to 'Show', editor_page
        %td= link_to 'Edit', edit_editor_page_path(editor_page)
        %td= link_to 'Destroy', editor_page, method: :delete, data: { confirm: 'Are you sure?' }

