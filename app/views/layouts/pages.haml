- content_for :content do
  - if @page.occurrence_map?
    - content_for :head do
      = javascript_include_tag "https://maps.google.com/maps/api/js?key=#{Rails.application.secrets.google_maps_key}"
      = javascript_include_tag "maps_vendored"
      = javascript_include_tag "maps"

  - if @page.medium
    .hero{ :style => "background-image: url(#{image_path @page.medium.original_size_url}" }

  .names
    %h1= @page.name.titlecase.html_safe
    -# if @page.name != @page.scientific_name
    %h2= @page.scientific_name.html_safe

  %ul.tabs
    - tab("overview", page_path(@page))
    - if @page.articles.size > 0
      - tab("detail", page_details_path(@page))
      -#
        %li= link_to("detail", page_details_path(@page))
    - if @page.data.any? 
      - tab("data", page_data_path(@page))
    - if @page.media_count > 0
      - tab("media", page_media_path(@page))
    - if @page.map?
      - tab("maps", page_maps_path(@page))
    - tab("names", page_names_path(@page))
    - if @page.literature_and_references_count > 1
      - tab("literature & references", page_literature_and_references_path(@page))
  = yield
= render :template => "layouts/application"
