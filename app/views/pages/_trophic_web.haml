.trophic-web.js-trophic-web{ data: { init: data.to_json, translations: translations.to_json }}
  .ui.dimmer.active
    .ui.loader
  .trophic-web-inner
    .split-left
      .centered.js-network-contain
        %svg.js-network-svg
    .split-right
      %h3.trophic-web-title= t(".trophic_web_title")
      %svg.js-tooltip-svg.tooltip-svg
      .js-tooltip
    .split-bottom
      .controls
        %button.js-zoom-in +
        %button.js-zoom-out -
        %button.js-reset= t(".reset")
      .uk-text-meta.uk-position-top-right= t(".globi_credit_html", url: "https://www.globalbioticinteractions.org?#{ { interactionType: 'interactsWith', sourceTaxon: @page.canonical_notags }.to_query }")

